<% if (title) { %>
    <h1 class="login-title"><%= title %></h1>
    <% } else { res.redirect('/') } %>

<%- messages() %>

<form action="submit">
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" name="account_email" required placeholder="Enter your account email">
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
        <input type="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" 
        placeholder="Enter your password">
    </div>
    <button type="submit">LOGIN</button>
    <div id="register">
        <p>No account? <a href="../account/register">Sign Up</a></p>
    </div>
</form>