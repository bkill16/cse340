<h1>Welcome to CSE Motors!</h1>
<section class="hero">
  <div id="hero-box">
    <h3>DMC Delorean</h3>
    <p>3 Cup Holders</p>
    <p>Superman Doors</p>
    <p>Fuzzy Dice!</p>
    <button>Own Today</button>
  </div>
  <div id="hero-img">
    <picture id="delorean-img">
      <source
        media="(max-width: 600px)"
        srcset="/images/vehicles/delorean-tn.jpg"
      />
      <source
        media="(min-width: 601px)"
        srcset="/images/vehicles/delorean.jpg"
      />
      <img
        src="/images/vehicles/delorean-tn.jpg"
        srcset="
          /images/vehicles/delorean-tn.jpg 600w,
          /images/vehicles/delorean.jpg    601w
        "
        alt="Delorean car"
      />
    </picture>
  </div>
</section>
<section class="delorean-info">
  <div class="delorean-upgrades">
    <h2>Delorean Upgrades</h2>
    <div id="flux-cap">
      <img
        id="flux-cap-img"
        class="upgrade-img"
        src="/images/upgrades/flux-cap.png"
        alt="Flux Capacitor"
      />
      <a class="upgrade-link" href="#">Flux Capactior</a>
    </div>
    <div id="bump-stick">
      <img
        id="bump-stick-img"
        class="upgrade-img"
        src="/images/upgrades/bumper_sticker.jpg"
        alt="Bumper Sticker"
      />
      <a class="upgrade-link" href="#">Bumper Sticker</a>
    </div>
    <div id="flame-dcls">
      <img
        id="flame-dcls-img"
        class="upgrade-img"
        src="/images/upgrades/flame.jpg"
        alt="Flame Decals"
      />
      <a class="upgrade-link" href="#">Flame Decals</a>
    </div>
    <div id="hub-caps">
      <img
        id="hub-caps-img"
        class="upgrade-img"
        src="/images/upgrades/hub-cap.jpg"
        alt="Hub Caps"
      />
      <a class="upgrade-link" href="#">Hub Caps</a>
    </div>
  </div>
</section>
